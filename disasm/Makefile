.SUFFIXES: .cc

srcdir = .

top_builddir    = ..
top_srcdir      = ..

SHELL = /bin/sh



CXX = psp-g++
CXXFLAGS = -I/usr/local/pspdev/psp/sdk/include -I/usr/local/pspdev/psp/sdk/../include/SDL -Dmain=SDL_main -Wall -O2 -G0 -fno-exceptions -fno-rtti  `sdl-config --cflags`

LDFLAGS = -L/usr/local/pspdev/psp/sdk/../lib -lSDLmain -lSDL -lm -L/usr/local/pspdev/psp/sdk/lib -lpspdebug -lpspgu -lpspctrl -lpspaudio -lc -lpspglue -lc -lpspkernel -lpspuser -lpspge -lpspdisplay -lpsphprm -L/usr/local/pspdev/psp/sdk/lib -lc -lpspglue -lc -lpspuser
LIBS =  -lm
RANLIB = psp-ranlib


# ===========================================================
# end of configurable options
# ===========================================================


BX_OBJS = \
  dis_decode.o \
  dis_groups.o \
  resolve.o    \
  syntax.o

BX_INCLUDES = disasm.h

BX_INCDIRS = -I.. -I$(srcdir)/.. -I../instrument/stubs -I$(srcdir)/../instrument/stubs

all: libdisasm.a

.cc.o:
	$(CXX) -c $(BX_INCDIRS) $(CXXFLAGS) $< -o $@



libdisasm.a: $(BX_OBJS)
	rm -f  libdisasm.a
	ar rv $@ $(BX_OBJS)
	$(RANLIB) libdisasm.a

$(BX_OBJS): $(BX_INCLUDES)


clean:
	rm -f  *.o
	rm -f  *.a

dist-clean: clean
	rm -f  Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.cc/g'
###########################################
dis_decode.o: dis_decode.cc disasm.h ../config.h dis_tables.h
dis_groups.o: dis_groups.cc disasm.h ../config.h
resolve.o: resolve.cc disasm.h ../config.h
syntax.o: syntax.cc disasm.h ../config.h
